
  generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String        @id @default(uuid())
  name      String
  email     String        @unique
  password  String
  createdAt DateTime      @default(now())

  pdfs      PdfDocument[]
}

model PdfDocument {
  id           String      @id @default(uuid())
  originalName String
  storagePath  String
  createdAt    DateTime    @default(now())
  parsedText   String?  
  status       String
  userId       String?
  user         User?       @relation(fields: [userId], references: [id], onDelete: Cascade)

  chunks       PdfChunk[]

  @@index([userId])
}

model PdfChunk {
  id        String      @id @default(uuid())
  content   String
  createdAt DateTime    @default(now())

  pdfId     String
  pdf       PdfDocument @relation(fields: [pdfId], references: [id], onDelete: Cascade)

  @@index([pdfId])
}
