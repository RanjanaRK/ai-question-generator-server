
  generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String        @id @default(uuid())
  name      String
  email     String        @unique
  password  String
  createdAt DateTime      @default(now())

  pdfs      PdfDocument[]
}

model PdfDocument {
  id           String      @id @default(uuid())
  originalName String
  storagePath  String
  createdAt    DateTime    @default(now())
  parsedText   String?  
  status       String
  userId       String?
  user         User?       @relation(fields: [userId], references: [id], onDelete: Cascade)
  mcqSets      McqSet[]

  @@index([userId])
}


model McqSet {
  id        String   @id @default(uuid())
  pdfId     String
  createdAt DateTime @default(now())
  pdf       PdfDocument @relation(fields: [pdfId], references: [id])
  items     McqItem[]
}


model McqItem {
  id            String @id @default(uuid())
  mcqSetId      String
  question      String
  optionA       String
  optionB       String
  optionC       String
  optionD       String
  correctOption String
  mcqSet        McqSet @relation(fields: [mcqSetId], references: [id])
}
