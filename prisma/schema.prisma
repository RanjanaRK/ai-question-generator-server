generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
}


model User{
   id String @default(uuid()) @id
   name String 
   email  String @unique
   password String
   createdAt DateTime @default(now())
   pdfDocs PdfDocument[]
}




model PdfDocument{
  id String @default(uuid()) @id
  originalName String 
   path  String @unique
   createdAt DateTime @default(now())
   userId String
   user User @relation(fields: [userId], references: [id])
}
